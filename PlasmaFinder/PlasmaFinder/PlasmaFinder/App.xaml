<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:converters="clr-namespace:PlasmaFinder.Converters"
             x:Class="PlasmaFinder.App">
    <Application.Resources>
        <ResourceDictionary>
            <converters:ItemTappedConverter x:Key="LocalItemTappedConverter"></converters:ItemTappedConverter>
        </ResourceDictionary>
        <OnPlatform x:TypeArguments="x:String" x:Key="RegularFont">
            <On Platform="Android" Value="Sailec-Regular.ttf#Sailec" />
            <On Platform="UWP" Value="/Assets/Sailec-Regular.ttf#Sailec" />
            <On Platform="iOS" Value="Sailec-Regular" />
        </OnPlatform>

        <OnPlatform x:TypeArguments="x:String" x:Key="MediumFont">
            <On Platform="Android" Value="Sailec-Medium.ttf#Sailec" />
            <On Platform="UWP" Value="/Assets/Sailec-Medium.ttf#Sailec" />
            <On Platform="iOS" Value="Sailec-Medium" />
        </OnPlatform>
    </Application.Resources>
</Application>